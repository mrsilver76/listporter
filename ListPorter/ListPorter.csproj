<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<RootNamespace>ListPorter</RootNamespace>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- Assembly information -->
		<ApplicationIcon>ListPorter.ico</ApplicationIcon>
		<Authors>Richard Lawrence</Authors>
		<Product>ListPorter</Product>
		<Description>Upload standard or extended .m3u playlist files to Plex Media Server</Description>
		<AssemblyTitle>Upload standard or extended .m3u playlist files to Plex Media Server</AssemblyTitle>
		<PackageProjectUrl>https://github.com/mrsilver76/listporter</PackageProjectUrl>
		<RepositoryUrl>https://github.com/mrsilver76/listporter</RepositoryUrl>
		<Copyright>Copyright © 2020-2025 Richard Lawrence</Copyright>

		<!-- Version information -->
		<!-- Remember major.minor.BUILD.revision! -->
		<Version>1.1.0.0</Version>
		<AssemblyVersion>1.1.0.0</AssemblyVersion>
		<FileVersion>1.1.0.0</FileVersion>
		<AnalysisLevel>latest-recommended</AnalysisLevel>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="ListPorter.ico" />
		<PackageReference Include="ini-parser" Version="2.5.2" />
	</ItemGroup>
</Project>